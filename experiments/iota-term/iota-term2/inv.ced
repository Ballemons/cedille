import ind.

inv-t ◂ trm ➔ ★ =
  λ t : trm .
    ∀ X : ★ . (∀ t1 : trm . ∀ t2 : trm . (t ≃ app t1 t2) ➔ X) ➔
              (∀ f : trm ➔ trm . (t ≃ lam f) ➔ X) ➔
              (∀ n : Nat . (t ≃ var n) ➔ X) ➔ X .

inv-trm ◂ Π t : trm . inv-t t =
  λ t . ind-trm t · inv-t
          (Λ t1 . Λ t2 . λ u1 . λ u2 . Λ X . λ a . λ l . λ v . a -t1 -t2 β)
          (Λ f . λ r . Λ X . λ a . λ l . λ v . l -f β)
          (λ n . Λ X . λ a . λ l . λ v . v -n β) .
                              
