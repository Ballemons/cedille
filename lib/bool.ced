rec Bool | tt : Bool , ff : Bool =
  ∀ P : Bool → ★ .
    P tt → P ff → P self
  with
    tt = Λ P . λ a . λ b . a ,
    ff = Λ P . λ a . λ b . b .

and ⇐ Bool → Bool → Bool = 
  λ x . λ y . x · (λ b : Bool . Bool) y ff .

or ⇐ Bool → Bool → Bool = 
  λ x . λ y . x · (λ b : Bool . Bool) tt y .

test ⇐ Bool = or tt ff !
