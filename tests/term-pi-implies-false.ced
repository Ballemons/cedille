module term-pi-implies-false.

Top ◂ ★ = {β ≃ β}.
False ◂ ★ = ∀ X : ★. X.
Not ◂ ★ ➔ ★ = λ X : ★. X ➾ False.

not-e ◂ Top ➔ ∀ A : ★. Not · A ➾ Not · A =
  λ x. Λ A. Λ n. Λ e. φ (n -e · {n ≃ x}) - (n -e) {x}.

tt ◂ Top = β{λ t. λ f. t}.
ff ◂ Top = β{λ t. λ f. f}.

tt-ff-false ◂ Top ➔ Not · {tt ≃ ff} = λ x. Λ e.
  χ (↑ X. λ t : X. λ f : X. t : ☆ ➔↑ ☆ ➔↑ ☆ · False · Top) - ρ e - β{x}.

-- Notice how to-ff applied to anything normalizes to ff
to-ff ◂ Π A : ★. Π B : ★. A ➔ A = λ A. λ B. λ a. a.

not-id ◂ ∀ A : ★. Not · (ι a : A. Not · {a ≃ ff}) =
  Λ A. Λ a. not-e β -(to-ff · (ι a : A. Not · {a ≃ ff}) · Top a).2 -β.

false ◂ False = not-id · Top -[tt, not-e β{tt} · {tt ≃ ff} -(tt-ff-false β) ].
