module DepUnderscoreIssue.

DepType ◂ Π A : ★. (A ➔ ★) ➔ ★ = λ A : ★. λ B : A ➔ ★.
  Π a : A. Π a' : A. B a ➔ B a'.

DepTerm ◂ ∀ A : ★. ∀ B : A ➔ ★. DepType · A · B =
  Λ A. Λ B. λ _. λ _. λ b. b.
--          ^-------^ Checking against a dependent type
-- Maybe we should check in the var case of conv if either is underscore?
-- Otherwise, maybe disable underscore if the type is dependent on it?

Contra ◂ ∀ X : ★. X =
  δ - DepTerm · {β ≃ β} · (λ x : {β ≃ β}. {x ≃ λ x. λ y. y})
  β{λ x. λ y. y} -- a
  β{λ x. λ y. x} -- a'
  β.             -- {a ≃ λ x. λ y. y}
                 -- Returns {a' ≃ λ x. λ y. y} = {λ x. λ y. x ≃ λ x. λ y. y}.
