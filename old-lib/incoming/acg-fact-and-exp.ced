fact ⇐ Nat → Nat =
  λ x . θ x
    ( λ px . λ hx . mult hx ( S px ) )
    ( S Z ) .

% Verifying that fac 3 is 6
test-fact = eqnat ( fact ( S ( S ( S Z ) ) ) ) ( S ( S ( S ( S ( S ( S Z ) ) ) ) ) ) !

exp ⇐ Nat → Nat → Nat =
  λ x . λ y . θ y
