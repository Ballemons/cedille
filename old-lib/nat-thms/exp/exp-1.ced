import nat-thms/exp/exp-0.
import nat-thms/mult/mult-0.

exp-one-0 ◂ Π e : Nat . exp ( S Z ) e ≃ ( S Z ) =
  λ e . θ e
    ( λ pe . λ he .
      ρ ( exp-defn ( S Z ) pe ) -
      ρ he -
      ρ ( mult-one-1 ( S Z ) ) -
      β )
    β .

exp-one-1 ◂ Π b : Nat . exp b ( S Z ) ≃ b =
  λ b . ρ ( exp-defn b ( S Z ) ) - ρ ( mult-one-1 b ) - β .
